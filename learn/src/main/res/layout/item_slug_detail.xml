<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_margin="@dimen/spacing_2x"
        android:padding="@dimen/spacing_2x">

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_youtube_view_height"
            android:visibility="gone"
            app:autoPlay="false"
            app:showFullScreenButton="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/textContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_2x"
                android:padding="@dimen/spacing_2x"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="@string/dialog_title_error"/>

            <TextView
                android:id="@+id/titleContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_2x"
                android:padding="@dimen/spacing_2x"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="@string/dialog_title_error"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <org.navgurukul.learn.ui.common.DecorationView
                android:id="@+id/decorContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_2x"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="@string/dialog_title_error"/>

            <RelativeLayout
                android:id="@+id/relBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textContent"
                android:visibility="gone"
                tools:visibility="visible"
                android:background="@drawable/hint_box_drawable">

                <TextView
                    android:id="@+id/bannerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16_dp"
                    android:layout_marginTop="@dimen/dimen_16_dp"
                    android:fontFamily="@font/nunito"
                    android:text="Kya aapke pas extrenal keyboard hai?"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bannerBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bannerTitle"
                    android:layout_marginHorizontal="@dimen/dimen_16_dp"
                    android:layout_marginTop="@dimen/dimen_16_dp"
                    android:fontFamily="@font/nunito"
                    android:text="Aap typing abhi start kar sakte hai"
                    android:textColor="?textPrimary"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/bannerButton"
                    android:layout_width="158dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/bannerBody"
                    android:layout_marginHorizontal="@dimen/dimen_16_dp"
                    android:layout_marginTop="@dimen/dimen_16_dp"
                    android:layout_marginBottom="19dp"
                    android:background="@drawable/primary_btn_selector"
                    android:fontFamily="@font/nunito"
                    android:text="Try Typing"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/codeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_16_dp"
                android:visibility="gone"
                tools:visibility="gone"
                android:background="#101210">

                <TextView
                    android:id="@+id/codeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="#343A33"
                    android:padding="@dimen/dimen_16_dp"
                    android:textColor="@color/colorWhite"
                    tools:text="Hi Title"/>

                <TextView
                    android:id="@+id/codeBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/codeTitle"
                    android:layout_margin="@dimen/dimen_16_dp"
                    tools:text="Hi Body"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/imageViewPlay"
                    android:layout_width="@dimen/dimen_code_play_button_height"
                    android:layout_height="@dimen/dimen_code_play_button_width"
                    app:layout_constraintTop_toBottomOf="@id/codeBody"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/spacing_4x"
                    android:layout_marginEnd="@dimen/spacing_4x"
                    android:gravity="center"
                    android:text="@string/run_code"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/round_button_rad_8_dp"
                    app:backgroundTint="@color/run_background"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_20_dp"
            android:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/blockQuoteLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@color/colorBlockQuoteBackground">
            <View
                android:id="@+id/view"
                app:layout_constraintTop_toTopOf="@id/blockQuoteText"
                app:layout_constraintBottom_toBottomOf="@id/blockQuoteText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="@dimen/dimen_2_dp"
                android:layout_height="0dp"
                android:background="@color/colorBlockQuoteBackgroundDark"/>
            <TextView
                android:id="@+id/blockQuoteText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/spacing_2x"
                android:paddingHorizontal="@dimen/dimen_10_dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/view"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text = "@string/empty_state_error_description"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</layout>