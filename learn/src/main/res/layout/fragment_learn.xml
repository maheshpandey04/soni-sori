<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="Batch"
            type="org.navgurukul.learn.courses.network.model.Batch" />

    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rlCourseContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/course_background"
            android:paddingStart="@dimen/spacing_4x"
            android:paddingEnd="@dimen/spacing_4x"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Batch_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="@android:color/transparent"
                app:cardCornerRadius="@dimen/dimen_20_dp"
                app:strokeWidth="?borderWidth">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/spacing_6x"
                    android:paddingBottom="@dimen/spacing_6x"
                    android:background="@color/card_background"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title_batch"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_3x"
                        android:layout_marginStart="@dimen/spacing_3x"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:text="@{Batch.title}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Batch: Ankit_15SEP21" />

                    <TextView
                        android:id="@+id/tvBatchDate"
                        style="?textAppearanceBody2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_3x"
                        android:layout_marginEnd="@dimen/spacing_3x"
                        android:layout_marginStart="@dimen/spacing_3x"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="15 Sep 21 to 15 Nov 21"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_title_batch"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_batch"
                        tools:text="15 Sep 21 to 15 Nov 21" />

                    <TextView
                        android:id="@+id/tvClassDetail"
                        style="?textAppearanceBody2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_3x"
                        android:layout_marginEnd="@dimen/spacing_3x"
                        android:layout_marginStart="@dimen/spacing_3x"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Access to Live Classes"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_title_batch"
                        app:layout_constraintTop_toBottomOf="@id/tvBatchDate"
                        tools:text="Access to live classes" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/tvBtnEnroll"
                        style="@style/Widget.MaterialComponents.Button"                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_3x"
                        android:layout_marginEnd="@dimen/spacing_4x"
                        android:layout_marginStart="@dimen/spacing_3x"
                        app:layout_constraintCircleRadius="@dimen/spacing_4x"
                        app:cornerRadius="@dimen/spacing_4x"
                        android:text="Enroll to Ankit_15SEP21"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/colorWhite"
                        app:backgroundTint="@color/green_progress_color"
                        android:background="@color/green_progress_color"
                        app:layout_constraintStart_toStartOf="@id/tv_title_batch"
                        app:layout_constraintTop_toBottomOf="@id/tvClassDetail"
                        tools:text="Enroll to Ankit_15SEP21" />

                    <TextView
                        android:id="@+id/tvText"
                        style="?textAppearanceEmphasized2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_3x"
                        android:layout_marginEnd="@dimen/spacing_3x"
                        android:layout_marginBottom="@dimen/spacing_4x"
                        android:ellipsize="end"
                        android:text="Can't start on 15 Sep 21"
                        android:maxLines="2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvClassDetail"
                        app:layout_constraintTop_toBottomOf="@id/tvBtnEnroll"
                        tools:text="Canâ€™t start on 15 Sep 21?" />

                    <TextView
                        android:id="@+id/more_classe"
                        style="?android:textColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_2x"
                        android:layout_marginEnd="@dimen/spacing_3x"
                        android:layout_marginBottom="@dimen/spacing_4x"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/green_progress_color"
                        android:text="Check out our other batch dates"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvClassDetail"
                        app:layout_constraintTop_toBottomOf="@id/tvText"
                        tools:text="Check out our other batch dates" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <org.navgurukul.commonui.views.EmptyStateView
                android:id="@+id/empty_state_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recyclerviewCourseContainer"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/Batch_card_container"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerviewCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintHeight_default="wrap"
                    android:layout_marginTop="@dimen/spacing_3x"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:clipChildren="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_course" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ProgressBar
                android:id="@+id/progress_bar_button"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="@dimen/dimen_progress_bar"
                android:layout_height="@dimen/dimen_progress_bar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:indeterminate="true"
                android:visibility="gone"
                app:elevation="2dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutTakeTest"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/recyclerviewCourseContainer"
                android:layout_marginTop="@dimen/spacing_1x">

                <View
                    android:id="@+id/separatorView"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:background="#DEDEDE"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/textAskOverviewCompletion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/separatorView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/spacing_4x"
                    style="?textAppearanceBody2"
                    android:text="Have you completed the overview?"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonTakeTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button"
                    app:layout_constraintTop_toBottomOf="@+id/textAskOverviewCompletion"
                    android:layout_marginHorizontal="@dimen/spacing_4x"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    tools:text="Yes, letâ€™s take the test"
                    android:padding="@dimen/spacing_4x"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/spacing_4x"
                    android:layout_marginBottom="@dimen/spacing_12x"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>
