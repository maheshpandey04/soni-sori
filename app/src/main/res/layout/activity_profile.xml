<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/idHeader"
            layout="@layout/component_header_profile"
            android:background="@color/colorWhite" />


        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/dimen_100_dp"
            android:layout_height="@dimen/dimen_100_dp"
            android:layout_below="@id/idHeader"
            android:layout_marginStart="@dimen/spacing_2x"
            android:background="@drawable/avatar_background_border"
            android:padding="@dimen/spacing_1x"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvName"
            style="@style/text_view_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idHeader"
            android:layout_marginTop="@dimen/spacing_2x"
            android:layout_toEndOf="@id/ivProfile"
            android:gravity="center_vertical"
            android:textStyle="bold"
            tools:text="Neha Singh" />

        <TextView
            android:id="@+id/tvEmail"
            style="@style/text_view_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_toEndOf="@id/ivProfile"
            android:textSize="14sp"
            tools:text="nehasingh@xyz.com" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ivEdit"
            style="@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEmail"
            android:layout_toEndOf="@+id/ivProfile"
            android:minWidth="@dimen/spacing_2x"
            android:minHeight="@dimen/spacing_2x"
            android:text="@string/edit"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/llProfileEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivEdit"
            android:layout_margin="@dimen/spacing_3x"
            android:orientation="vertical"
            android:visibility="gone"
            tools:layout_editor_absoluteX="10dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10_dp"
                android:hint="@string/name"
                android:padding="@dimen/dimen_10_dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10_dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/email"
                android:inputType="none"
                android:padding="@dimen/dimen_10_dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/opportunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llProfileEdit"
            android:layout_marginStart="@dimen/spacing_3x"
            android:layout_marginTop="@dimen/spacing_2x"
            android:fontFamily="@font/n_extra_bold"
            android:text="@string/opportunities"
            android:textColor="@color/colorGrey_100" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/opportunity"
            android:layout_margin="@dimen/spacing_3x"
            android:layout_toStartOf="@+id/image"
            android:fontFamily="@font/nunito"
            android:text="@string/opportunities_desc"
            android:textColor="@color/on_boarding_text_view_black_color"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/opportunity"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/spacing_2x"
            android:layout_marginEnd="@dimen/spacing_2x"
            android:layout_marginBottom="@dimen/spacing_2x"
            android:src="@drawable/profile_presents" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/explore_opportunity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_marginStart="@dimen/spacing_3x"
            android:layout_marginTop="@dimen/spacing_3x"
            android:layout_marginEnd="@dimen/spacing_3x"
            android:layout_marginBottom="@dimen/spacing_3x"
            android:fontFamily="@font/nunito"
            android:minHeight="@dimen/minimum_button_height"
            android:text="@string/explore_opportunities"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:cornerRadius="@dimen/dimen_10_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <TextView
            android:id="@+id/tvSavedFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/spacing_3x"
            android:layout_marginTop="@dimen/spacing_3x"
            android:paddingStart="@dimen/spacing_4x"
            android:paddingEnd="@dimen/spacing_4x"
            android:text="@string/files_saved"
            android:layout_below="@id/explore_opportunity"
            android:textColor="#D63447"
            tools:text="Files Saved" />

        <TextView
            android:id="@+id/tvViewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/spacing_3x"
            android:layout_marginTop="@dimen/spacing_3x"
            android:paddingStart="@dimen/spacing_4x"
            android:paddingEnd="@dimen/spacing_4x"
            android:text="@string/view_all"
            android:layout_below="@id/explore_opportunity"
            android:textColor="#D63447" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSavedFile"
            android:layout_above="@id/updateProfile"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/item_saved_file" />


        <ProgressBar
            android:id="@+id/progress_bar_button"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="@dimen/dimen_progress_bar"
            android:layout_height="@dimen/dimen_progress_bar"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone"
            app:elevation="2dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorRed"
            android:padding="@dimen/dimen_10_dp"
            android:text="@string/update_profile"
            android:textColor="@color/colorWhite"
            android:visibility="gone" />
    </RelativeLayout>
</layout>